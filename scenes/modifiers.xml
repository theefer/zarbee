<?xml version="1.0"?>
<!DOCTYPE scene SYSTEM "zarbee.dtd">
<scene>

  <group id="world">

    <point id="zero" />

    <group>
    	<translate x="4" y="8" z="12"/>
	    <point id="cam" />
    </group>

    <group>
    	<translate x="-1" y="4" z="2"/>
	    <point id="light" />
    </group>

    <group>
        <color red="1" green="0" blue="0" alpha="1" />

        <group>
            <translate x="-7" y="0" z="0"/>
            <cube size="2"/>
        </group>

        <group>
            <rotate axis-x="1" axis-y="-2" axis-z="0" angle="60"/>
            <translate x="-3" y="0" z="0"/>
            <cube size="2"/>
        </group>

        <group>
            <scale x="0.6" y="2" z="1.2"/>
            <translate x="1" y="0" z="0"/>
            <cube size="2"/>
        </group>

        <group>
            <shear x-zcoeff="-1.2" x-ycoeff="0.4"/>
            <translate x="5" y="0" z="0"/>
            <cube size="2"/>
        </group>

    </group>
  </group>

  <camera-list>
    <fixed-camera key="1" position="cam" lookat="zero" opening="0.6"/>
  </camera-list>

  <light-list>
    <ambient intensity="1.8"/>
    <lamp position="light" intensity="10"/>
  </light-list>
</scene>
